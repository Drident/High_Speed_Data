#include "stm32l4xx_hal.h"
#include "main.h"

uint32_t previousMillis = 0;
uint32_t currentMillis = 0;
uint32_t counterOutside = 0; //For testing only
uint32_t counterInside = 0; //For testing only

void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
	currentMillis = HAL_GetTick();
	if(GPIO_Pin == FPGA_DONE_Pin){
		//---------------------------------------------------RECEIVE ADD------------------------------------------
		LED_on(BLUE);
		HAL_ResumeTick();
		//sleep_ = 1;
	}
	else if(GPIO_Pin == WAKE_UP_Pin && (currentMillis - previousMillis > 10)){
		previousMillis = currentMillis;
		if(HAL_GPIO_ReadPin(WAKE_UP_GPIO_Port, WAKE_UP_Pin) == GPIO_PIN_RESET){
			LED_on(RED);
		}
		else{
			LED_on(BLUE);
		}
	}
	else if(GPIO_Pin == ARM_BUTTON_Pin){
		LED_on(GREEN);
	}
}
